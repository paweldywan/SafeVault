@model SaveVault.Models.Document
@{
    ViewData["Title"] = "Document Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Html.DisplayFor(model => model.Title)</h1>
    <div class="btn-group" role="group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <strong>Content:</strong>
            <div class="mt-2 p-3 bg-light rounded">
                @Html.Raw(Html.Encode(Model.Content).Replace("\n", "<br />"))
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <strong>Created:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")
            </div>
            <div class="col-md-6">
                <strong>Last Updated:</strong> @Model.UpdatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Documents</a>
</div>