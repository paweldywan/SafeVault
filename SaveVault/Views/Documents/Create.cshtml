@model SaveVault.Models.Document
@{
    ViewData["Title"] = "Create Document";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter document title (3-200 chars, letters, numbers, spaces, hyphens, underscores, dots only)" />
                <span asp-validation-for="Title" class="text-danger"></span>
                <small class="form-text text-muted">Title must be 3-200 characters long and contain only letters, numbers, spaces, hyphens, underscores, and dots.</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control" rows="10" 
                          placeholder="Enter document content (minimum 10 characters)"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
                <small class="form-text text-muted">Content must be at least 10 characters long.</small>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}