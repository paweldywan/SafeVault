@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Welcome to SafeVault</h1>
    <p class="lead mb-5">Your secure document management solution with enterprise-grade security features.</p>
</div>

<div class="row mb-5">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fa fa-shield-alt fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Enterprise Security</h5>
                <p class="card-text">Built with security-first principles including input validation, SQL injection prevention, and XSS protection.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fa fa-user-lock fa-3x text-success mb-3"></i>
                <h5 class="card-title">Authentication & Authorization</h5>
                <p class="card-text">Secure user authentication with role-based access control and account lockout protection.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="fa fa-file-alt fa-3x text-info mb-3"></i>
                <h5 class="card-title">Document Management</h5>
                <p class="card-text">Create, edit, and manage your documents securely with full audit trails and data isolation.</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h5 class="card-title">Security Features Implemented</h5>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <ul class="list-unstyled text-start">
                            <li><i class="fa fa-check text-success"></i> Input Validation & Sanitization</li>
                            <li><i class="fa fa-check text-success"></i> SQL Injection Prevention</li>
                            <li><i class="fa fa-check text-success"></i> Cross-Site Scripting (XSS) Protection</li>
                            <li><i class="fa fa-check text-success"></i> CSRF Token Protection</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-unstyled text-start">
                            <li><i class="fa fa-check text-success"></i> Secure Authentication</li>
                            <li><i class="fa fa-check text-success"></i> Role-Based Access Control</li>
                            <li><i class="fa fa-check text-success"></i> Account Lockout Protection</li>
                            <li><i class="fa fa-check text-success"></i> Security Headers & HSTS</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!User.Identity?.IsAuthenticated == true)
{
    <div class="text-center mt-5">
        <h3>Ready to get started?</h3>
        <p class="lead">Create your account today and start managing your documents securely.</p>
        <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg me-3">Register Now</a>
        <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary btn-lg">Login</a>
    </div>
}
